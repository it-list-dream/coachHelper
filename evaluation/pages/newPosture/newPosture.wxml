<view class="newPosture">
  <view class="posture-date">
    <picker mode="date" value="{{date}}" start="2018-01-01" end="2017-09-01" bindchange="bindDateChange">
      <view class="picker">
        <text>评估时间 {{date}}</text>
        <image src="./images/blue_arrow.png"></image>
      </view>
    </picker>
  </view>
  <van-tabs title-inactive-color="#A4ACBF" title-active-color="#2565F6" active="{{ postureActive }}" sticky
    bind:change="postureChange" color="#2565F6">
    <van-tab title="正面">
      <view class="front-box">
        <view class="front-box-title">请上传身体正面照</view>
        <view class="front-picture">
          <view class="picture">
            <image class="front-bg" src="./images/border.png"></image>
            <!-- image -->
          </view>
          <view class="picture-explain">
            <view class="explain-text">1.请将身体全部置于方框内</view>
            <view class="explain-text">2.图片只支持jpg或png格式</view>
            <view class="explain-text">3.图片大小不能超过5M</view>
          </view>
        </view>
        <view class="record-title">问题记录</view>
        <view class="question-record">
          <view class="body-regions">头部</view>
          <scroll-view class="body-checkbox" scroll-x="true" enable-flex>
            <text>向右扭转</text>
            <text>向左侧倾</text>
            <text>向右侧倾</text>
            <text>向右扭转</text>
          </scroll-view>
          <view class="body-regions">肩部</view>
          <scroll-view class="body-checkbox" scroll-x="true" enable-flex>
            <text>左侧耸肩</text>
            <text>右侧塌肩</text>
            <text>左侧塌肩</text>
            <text>右侧耸肩</text>
          </scroll-view>
          <view class="body-regions">肩胛骨</view>
          <scroll-view class="body-checkbox" scroll-x="true" enable-flex>
            <text>肩带前引</text>
            <text>肩带缩回</text>
          </scroll-view>
          <view class="body-regions">上肢</view>
          <scroll-view class="body-checkbox" scroll-x="true" enable-flex>
            <text>左侧间隙大</text>
            <text>右侧间隙大</text>
          </scroll-view>
          <view class="body-regions">胸腰椎</view>
          <scroll-view class="body-checkbox" scroll-x="true" enable-flex>
            <text>C型</text>
            <text>S型</text>
          </scroll-view>
          <view class="body-regions">盆骨</view>
          <scroll-view class="body-checkbox" scroll-x="true" enable-flex>
            <text>盆骨侧倾</text>
          </scroll-view>
          <!--  -->
          <view class="body-regions">臀线</view>
          <scroll-view class="body-checkbox" scroll-x="true" enable-flex>
            <text>左侧腿长</text>
            <text>右侧腿长</text>
          </scroll-view>
          <view class="body-regions">髋关节</view>
          <scroll-view class="body-checkbox" scroll-x="true" enable-flex>
            <text>髋内旋</text>
            <text>髋外旋</text>
            <text>髋外展</text>
            <text>髋内收</text>
          </scroll-view>
          <view class="body-regions">踝关节</view>
          <scroll-view class="body-checkbox" scroll-x="true" enable-flex>
            <text>足背屈</text>
            <text>跖屈</text>
          </scroll-view>
          <view class="body-regions">足部</view>
          <scroll-view class="body-checkbox" scroll-x="true" enable-flex>
            <text>外翻</text>
            <text>内翻</text>
            <text>扁平足</text>
          </scroll-view>
        </view>
        <view class="coach-remarks">教练备注</view>
        <view class="remarks-textarea">
          <textarea class="textarea" placeholder="备注" placeholder-style="color:#D2D2D2;"></textarea>
          <view class="limit">1/200</view>
        </view>
        <view class="savelist">
          <button class="savebtn">下一步</button>
        </view>
      </view>
    </van-tab>
