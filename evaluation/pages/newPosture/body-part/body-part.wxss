.front-box {
  margin-top: 40rpx;
}

.front-box-title {
  font-size: 34rpx;
  color: #333333;
}

.front-picture {
  display: flex;
  margin-top: 30rpx;
  margin-bottom: 40rpx;
}

.picture {
  width: 336rpx;
  height: 446rpx;
  background: #EDF4FF;
  flex-shrink: 0;
  box-sizing: border-box;
}

.picture .front-bg {
  width: 100%;
  height: 100%;
}

.picture-explain {
  flex: 1;
  margin-left: 30rpx;
}

.picture-explain .explain-text {
  font-size: 27rpx;
  color: #7F7F7F;
  margin: 20rpx 0;
}

.record-title {
  text-align: center;
  font-size: 30rpx;
  color: #333333;
}

.question-record {
  width: 100%;
  overflow: hidden;
}

.question-record .body-regions {
  font-size: 30rpx;
  color: #333333;
  border-bottom: 0.5px solid #DDDDDD;
  padding: 20rpx 0;
}

.question-record .body-checkbox {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 0 30rpx;
}

.question-record .body-checkbox .part-item{
  padding: 0 28rpx;
  height: 42rpx;
  line-height: 42rpx;
  border: 0.5px solid #BFBFBF;
  border-radius: 21rpx;
  font-size: 24rpx;
  color: #BFBFBF;
  text-align: center;
  margin: 0 22rpx 28rpx;
}

.active {
  border: 0.5px solid transparent !important;
  background-color: #2564F6 !important;
  color: #FFFFFF !important;
}

.coach-remarks {
  margin-top: 100rpx;
  margin-bottom: 36rpx;
  text-align: center;
  font-size: 30rpx;
  color: #333333;
}

.remarks-textarea {
  width: 670rpx;
  height: 376rpx;
  border: 1px dotted #A7A7A7;
  padding: 30rpx;
  box-sizing: border-box;
}

.remarks-textarea .textarea {
  width: 100%;
  height: 280rpx;
  font-size: 30rpx;
}

.remarks-textarea .limit {
  text-align: right;
  font-size: 30rpx;
  color: #D2D2D2;
}

.savelist {
  margin-top: 100rpx;
  width: 100%;
  height: 86rpx;
  padding-bottom: 30rpx;
}

.savelist .savebtn {
  width: 620rpx;
  height: 86rpx;
  line-height: 86rpx;
  text-align: center;
  background: #2564F6;
  border-radius: 12rpx;
  font-size: 32rpx;
  color: #FFFFFF;
}