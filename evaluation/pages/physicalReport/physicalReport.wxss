/* evaluation/pages/physicalReport/physicalReport.wxss */
.van-tabs__line {
  background-color: transparent !important;
}

.phy_ReportIndex {
  padding-bottom: 30rpx;
}

.analysis-synthesis {
  position: relative;
  width: 100%;
  height: 360rpx;
}

.analysis-synthesis .analysis-item {
  display: flex;
  padding: 16rpx 0;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  width: 172rpx;
  height: 108rpx;
  background: #E9EFFE;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #2565F6;
  box-sizing: border-box;
}

.analysis-bg {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}

.analysis-bg image {
  width: 290rpx;
  height: 260rpx;
}

.analysis-weight {
  position: absolute;
  top: 10rpx;
  left: 50rpx;
}

.fat-percentage {
  position: absolute;
  top: 10rpx;
  right: 50rpx;
}

.bmi {
  position: absolute;
  bottom: 10rpx;
  left: 50rpx;
}

.whr {
  position: absolute;
  bottom: 10rpx;
  right: 50rpx;
}

.analysis-status {
  display: inline-block;
  width: 60rpx;
  height: 28rpx;
  line-height: 28rpx;
  text-align: center;
  background: #FF384C;
  border-radius: 14rpx;
  font-size: 20rpx;
  color: #FFFFFF;
}

/*  */
.run_type {
  margin: 0 auto;
  margin-top: 30rpx;
  width: 636rpx;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  border: 1px solid #2565F6;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #2565F6;
}

/* 基本情况 */
.basic-infromation {
  margin-top: 106rpx;
}

.basic-infromation .basic-title {
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #222222;
  margin-bottom: 50rpx;
}

.basic-body-box {
  margin-bottom: 116rpx;
}

.basic-body-item {
  margin: 0 auto;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  width: 636rpx;
  height: 100rpx;
  background: #E9EFFE;
  border-radius: 12rpx;
  box-sizing: border-box;
}

.basic-body-item .left {
  font-size: 30rpx;
  color: #333333;
}

.basic-body-item .left>image {
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
}

.basic-body-item .left .b-name {
  margin-left: 10rpx;
}

.basic-body-item .left text:last-child {
  margin-left: 40rpx;
  font-weight: bold;
}

.basic-body-item .right {
  width: 52rpx;
  height: 26rpx;
  line-height: 26rpx;
  text-align: center;
  background: #0AE399;
  border-radius: 13rpx;
  font-size: 18rpx;
  color: #FFFFFF;
}

.standard-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #222222;
  text-align: center;
  margin-bottom: 60rpx;
}

.standard-list {
  display: flex;
  justify-content: space-between;
  padding: 0 50rpx 30rpx;
}

.standard-list .standard-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  width: 156rpx;
  height: 98rpx;
  border: 1px solid #2565F6;
  border-radius: 9rpx;
  font-size: 26rpx;
  color: #2565F6;
  box-sizing: border-box;
}

/* 体侧详情 */

.health-item {
  padding: 0 50rpx;
  margin-top: 24rpx;
  margin-bottom: 80rpx;
}

.health-item .health-data {
  width: 636rpx;
  height: 258rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 12rpx 0px rgba(0, 0, 0, 0.08);
  border-radius: 10rpx;
  padding: 28rpx 28rpx 0;
  box-sizing: border-box;
  margin-bottom: 30rpx;
}



.health-item .health-data-left image {
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
}

.health-data-left {
  display: flex;
  justify-content: space-between;
}

.health-item .health-data-left .text {
  margin-left: 14rpx;
  font-size: 30rpx;
  color: #222222;
  vertical-align: middle;
}

.health-item .health-data-left text:last-child {
  margin-left: 22rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #222222;
  vertical-align: middle;
}

.health-data-left .health-data-right {
  width: 84rpx;
  height: 34rpx;
  text-align: center;
  line-height: 34rpx;
  background: #FF384C;
  border-radius: 16rpx;
  font-size: 24rpx;
  color: #FFFFFF;
}

.progress-title {
  margin-top: 36rpx;
  width: 100%;
  display: flex;
  justify-content: space-evenly;
  font-size: 24rpx;
  color: #222222;
}

.progress-title text {
  position: relative;
}

.progress-title text::after {
  content: '';
  position: absolute;
  top: 54rpx;
  left: 24rpx;
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background-color: #FFFFFF;
}

.progress-box {
  margin-top: 12rpx;
  margin-bottom: 9rpx;
}

.wx-progress-inner-bar {
  border-radius: 12rpx !important;
  background: #2565F6 !important;
}

.progress-value {
  display: flex;
  width: 100%;
}

.progress-value text {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  color: #222222;
}


/*  */
.examination-detail .health-title {
  padding: 12rpx 50rpx 0;
  font-size: 32rpx;
  font-weight: bold;
  color: #222222;
}

.health-picture {
  display: flex;
  justify-content: space-between;
  padding: 0 48rpx;
  margin-bottom: 80rpx;
}

.health-picture .health-image {
  width: 150rpx;
  height: 188rpx;
}

.health-image image,
.health-image .gray {
  width: 100%;
  height: 100%;
}

.health-image .gray {
  background: #DFDFDF;
}

/* 身体测量 */
.measurement {
  margin-top: 60rpx;
  display: flex;
  flex-wrap: wrap;
  padding: 0 40rpx;
}

.measurement .measurement-item {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  width: 146rpx;
  height: 146rpx;
  background: #E4ECFE;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #2565F6;
  padding: 0 12rpx;
  box-sizing: border-box;
  margin: 0 10rpx 20rpx;
}

.measurement .measurement-item text {
  text-align: center;
}

/* 肌肉 */
.segment_box {
  position: relative;
  display: flex;
  padding: 0 54rpx;
}

.segment_box>view {
  flex: 1;
}

.segment_box .segment-title {
  font-size: 29rpx;
  color: #333333;
  padding: 30rpx 0;
}

.segment-bg {
  position: relative;
  width: 308rpx;
  height: 376rpx;
}

.segment-bg .bg {
  width: 100%;
  height: 100%;
}

.segment-bg>view {
  font-size: 15rpx;
  color: #FFFFFF;
}

.segment-bg .segment-item {
  position: absolute;
  top: 22rpx;
  left: 16rpx;
}

.segment-bg .segment-item2 {
  text-align: right;
  position: absolute;
  top: 22rpx;
  right: 16rpx;
}

.segment-bg .segment-item3 {
  position: absolute;
  top: 110rpx;
  left: 132rpx;
  color: #2666F6;
}

.segment-bg .segment-item4 {
  position: absolute;
  left: 16rpx;
  bottom: 69rpx;
}

.segment-bg .segment-item5 {
  position: absolute;
  text-align: right;
  right: 16rpx;
  bottom: 77rpx;
}

.segment-bg .segment-item6 {
  text-align: center;
  position: absolute;
  left: 115rpx;
  bottom: 26rpx;
}

.segment-bg .segment-item6>view:last-child {
  margin-top: 10rpx;
}

