.upload-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 150rpx;
  height: 188rpx;
  background: #F1F6FF;
}

.upload-box image {
  width: 32rpx;
  height: 30rpx;
  margin-bottom: 30rpx;
}

.upload-box .upload-view {
  font-size: 22rpx;
  color: #CDD6E8;
}