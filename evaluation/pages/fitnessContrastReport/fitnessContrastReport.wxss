.sidephoto-box {
  margin-top: 20rpx;
  padding: 30rpx 54rpx 0;
  width: 100%;
  height: 978rpx;
  box-sizing: border-box;
  background-color: #FFFFFF;
}

.sidephoto-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #000000;
}

.sidephoto-content {
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  align-content: space-between;
  flex-wrap: wrap;
  height: 832rpx;
  flex-wrap: wrap;
}

.sidephoto-content .side-item {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 50%;
  height: 188rpx;
}

.side-item .no-picture {
  width: 150rpx;
  height: 188rpx;
  line-height: 188rpx;
  text-align: center;
  border: 1px dotted #AAAAAA;
  font-size: 24rpx;
  color: #666666;
}

.side-item .profile-pic {
  width: 150rpx;
  height: 188rpx;
  vertical-align: bottom;
}

/* 身体数据 */
