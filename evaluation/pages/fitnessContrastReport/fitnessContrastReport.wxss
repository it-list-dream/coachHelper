/* physical-detail */
.physical-detail {
  position: absolute;
  left: 0;
  bottom: 0rpx;
  display: flex;
  width: 100%;
  height: 260rpx;
  flex-wrap: wrap;
}

.physical-detail .physical-detail-item {
  display: flex;
  height: 80rpx;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  width: 24%;
  font-size: 24rpx;
  color: #000000;
  border-right: 1px solid #E3E3E3;
}

.physical-detail .physical-detail-item:nth-child(4n) {
  border-right: none !important;
}

