  height: auto;
  padding: 30rpx 54rpx 0;
  box-sizing: border-box;
  background-color: #FFFFFF;
}

.physicaldata-box .physicaldata-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #000000;
}

.physicaldata-box .physicaldata-content {
  margin-top: 30rpx;
  padding-bottom: 60rpx;
}

/* 成分 */
.ingredientdata-list {
  margin-top: 20rpx;
  padding: 30rpx 54rpx 60rpx;
  background-color: #FFFFFF;
}

.ingredientdata-list-title {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #000000;
}

.ingredientdata-list .ingredientdata-content {
  margin-bottom: 220rpx;
}

.ingredientdata-list .constract-poster {
  margin: 0 auto;
  width: 620rpx;
