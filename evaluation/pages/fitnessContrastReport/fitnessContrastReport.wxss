page {
  background-color: #F5F3FF;
}

.addcase-box {
  position: relative;
  width: 100%;
  height: 300rpx;
  background: #FFFFFF;
  padding: 40rpx 0;
  box-sizing: border-box;
}

.addcase-btn {
  position: absolute;
  top: 50rpx;
  left: 30rpx;
  width: 150rpx;
  height: 48rpx;
  background: #2564F6;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #FFFFFF;
}

.addcase-box .addcase-info {
   display: flex;
   height: 100%;
   flex-direction: column;
   align-items: center;
   justify-content: space-between;
}
.addcase-box .addcase-info text{
  font-size: 30rpx;
color: #000000;
}
.addcase-box .addcase-info .headportrait{
  width: 110rpx;
  height: 110rpx;
}