}
/* 弹窗 */
.poupon_list {
  width: 690rpx;
  height: 394rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
  box-sizing: border-box;
  padding:28rpx 18rpx;
}
.poupon-content{
  padding-top: 36rpx;
  display: flex;
  flex-wrap: wrap;
}
.poupon_list .poupon_list_title {
  text-align: center;
  font-size: 30rpx;
  color: #222222;
}

.poupon_list .poupon_item {
  margin: 0 12rpx 30rpx;
  width: 126rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background: #E5E5E5;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #5C5C5C;
}
.poupon_list .active-item{
  background-color: #2664F6;
  color: #ffffff;
}
.poupon_button {
  margin-top:60rpx;
  display: flex;
  justify-content: space-evenly;
}

.poupon_button .button {
  width: 178rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  box-sizing: border-box;
  font-size: 26rpx;
  border-radius: 25px;
}

.poupon_button .cancel {
  border: 2rpx solid #E2E2E2;
  color: #5C5C5C;
}

.poupon_button .confrim {
  background: #2664F6;
  color: #FFFFFF;
  border: none;
}