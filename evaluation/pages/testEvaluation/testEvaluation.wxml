<view class="testEvaluation">
  <view class="test-item" bindtap="testFitness">
    <view class="next-icon">
      <image src="/assets/images/white-arrow.png"></image>
    </view>
    <image class="test_bg" src="./images/test.png"></image>
    <view class="wrapper">
      <view class="test-title">测试体适能</view>
      <view class="test-content">评测体适能，使您更加了解自己</view>
      <view class="attentionPeople">{{bodyTestCount}}人已经测试过</view>
    </view>
  </view>
  <view class="test-item" bindtap="posture">
    <view class="next-icon">
      <image src="/assets/images/white-arrow.png"></image>
    </view>
    <image class="test_bg" src="./images/evaluation.png"></image>
    <view class="wrapper">
      <view class="test-title">体态评估</view>
      <view class="test-content">良好的体态为下一步运动做好准备</view>
      <view class="attentionPeople">
        <text>{{statureCount}}</text>
        人已经测试过
      </view>
    </view>
  </view>
</view>