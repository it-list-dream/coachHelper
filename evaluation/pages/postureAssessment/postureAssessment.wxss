/* pages/postureAssessment/postureAssessment.wxss */
.header {
  height: 360rpx;
  background: linear-gradient(90deg, #2664F6 0%, #6996FF 100%);
}

.profile {
  padding-top: 30rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.profile text {
  margin-top: 26rpx;
  font-size: 36rpx;
  color: #FFFFFF;
}

.profile image {
  width: 120rpx;
  height: 120rpx;
}

.assessmentbtn {
  display: flex;
  justify-content: flex-end;
  margin-top: 38rpx;
  padding: 0 30rpx;
}

.assessmentbtn .addassement {
  width: 230rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #2565F6;
  margin-right: 74rpx;
}

.assessmentbtn .comparison {
  width: 156rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #FFFFFF;
  border: 1px solid #FFFFFF;
}

/*  */
.posture-content {
  margin-top: 30rpx;
}

.test-report {
  position: relative;
  width: 690rpx;
  height: 180rpx;
  margin: 0 auto;
  margin-bottom: 20rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 14rpx rgba(0, 34, 112, 0.08);
  border-radius: 10rpx;
}

.test-report .reportdetail {
  display: flex;
  align-items: center;
}

.test-checked {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  width: 100%;
  height: 54rpx;
  /* background-color: pink; */
}

.test-checked>view {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 64rpx;
  height: 100%;
  /* background-color: orange; */
}

.test-checked image {
  width: 34rpx;
  height: 34rpx;
}

.test-checked .checked {
  width: 34rpx;
  height: 34rpx;
  box-sizing: border-box;
  border: 1px solid #BFBFBF;
  border-radius: 50%;
}

.circle {
  position: absolute;
  width: 66rpx;
  height: 56rpx;
  right: 0;
  bottom: 0;
}

.reportdetail {
  padding: 0 30rpx;
}

.reportdetail .test-image {
  margin-left: 10rpx;
  flex-shrink: 0;
}

.reportdetail .test-image image {
  width: 70rpx;
  height: 70rpx;
}

.reportdetail .top-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 14rpx;
}

.reportdetail .top-box>text {
  font-size: 32rpx;
  color: #333333;
}

.reportdetail .top-box>image {
  width: 30rpx;
  height: 30rpx;
}

.bottom-box>text:last-child {
  margin-left: 30rpx;
}

.test-info {
  flex: 1;
  margin-left: 24rpx;
  margin-right: 44rpx;
}

.test-info .bottom-box {
  font-size: 26rpx;
  color: #333333;
}

/*  */
.btnbox {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 86rpx;
}

.btnbox .constractBtn {
  margin: 0 auto;
  width: 620rpx;
  height: 86rpx;
  line-height: 86rpx;
  text-align: center;
  background: #2564F6;
  border-radius: 12rpx;
  font-size: 32rpx;
  color: #FFFFFF;
}