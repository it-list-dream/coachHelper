page {
  background: #7F7CFF;
}

.poster {
  position: relative;
  margin: 0 auto;
  width: 724rpx;
  height: 1152rpx;
}

.poster .poster-bg {
  width: 100%;
  height: 100%;
}

.poster-content {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 10;
  padding: 0 52rpx;
  box-sizing: border-box;
}

.poster-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 64rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px dotted #A998FF;
}

.poster-head .poster-title {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #404040;
}

.save-list {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 188rpx;
  height: 64rpx;
  background: #7F7CFF;
  border-radius: 32rpx;
}

.save-list text {
  font-size: 28rpx;
  color: #FFFFFF;
  vertical-align: middle;
}

.save-list image {
  width: 34rpx;
  height: 34rpx;
  margin-left: 7rpx;
  vertical-align: middle;
}

.fitness-pic {
  margin-top: 36rpx;
  width: 618rpx;
  height: 626rpx;
}

.fitness-pic image {
  width: 100%;
  height: 100%;
  vertical-align: bottom;
}

.fitness-data {
  margin-top: 50rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.grid image {
  width: 42rpx;
  height: 42rpx;
  vertical-align: middle;
}

.grid text {
  padding-left: 6rpx;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #000000;
  vertical-align: middle;
}

.ftitle {
  margin-top: 4rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #989898;
}

/*  */
.myCanvas {
  position: absolute;
  top: 0;
  left: -1000px;
  width: 100%;
}