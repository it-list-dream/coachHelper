<view class="poster">
  <image class="poster-bg" src="../../images/poster/bg.png"></image>
  <view class="poster-content">
    <view class="poster-head">
      <view class="poster-title">效果数据图</view>
      <view class="save-list" bindtap="doPoster">
        <text>保存</text>
        <image src="../../images/poster/save.png"></image>
      </view>
    </view>
    
    <view class="fitness-pic">
      <image src="../../images/poster/fit-bg.png"></image>
    </view>
    
    <view class="fitness-data">
      <view>
        <view class="grid">
          <image src="../../images/poster/weight.png"></image>
          <text>{{weight || 0}}</text>
        </view>
        <view class="ftitle">体重(千克)</view>
      </view>
      <view>
        <view class="grid">
          <image src="../../images/poster/fat.png"></image>
          <text>{{fat || 0}}</text>
        </view>
        <view class="ftitle">脂肪量(千克）</view>
      </view>
      <view>
        <view class="grid">
          <image src="../../images/poster/body-fat.png"></image>
          <text>{{pbf || 0}}</text>
        </view>
        <view class="ftitle">体脂率(百分比）</view>
      </view>
    </view>
  </view>
</view>
<canvas style="width:{{canvasWidth}}px;height:{{canvasHeight}}px;" class="myCanvas" canvas-id="myCanvas"></canvas>