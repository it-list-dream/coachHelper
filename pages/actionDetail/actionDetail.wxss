}

.expercise-content {
  padding-left: 36rpx;
}

.actionlist {
  margin-top: 20rpx;
  width: 100%;
  height: 560rpx;
  background: #FFFFFF;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.actionlist .actionlist-item {
  font-size: 26rpx;
  font-family: PingFang SC;
  color: #000000;
  line-height: 45rpx;
}