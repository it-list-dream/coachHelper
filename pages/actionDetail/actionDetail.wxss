/* pages/actionDetail/actionDetail.wxss */
page {
  background-color: #F5F3FF;
}

.action-name {
  padding: 0 30rpx;
  height: 110rpx;
  line-height: 100rpx;
  background: #FFFFFF;
  font-size: 40rpx;
  font-weight: 800;
  color: #000000;
}

.action-name::before {
  margin-right: 24rpx;
  content: '';
  display: inline-block;
  width: 6rpx;
  height: 30rpx;
  background-color: #FB9335;
}

/*  */
.action-params {
  margin-top: 20rpx;
  padding-left: 30rpx;
  width: 100%;
  height: 304rpx;
  background: #FFFFFF;
}

.action-tips {
  position: relative;
  padding: 30rpx 0;
  font-size: 30rpx;
  font-weight: 800;
  color: #000000;
  padding-left: 44rpx;
}

.action-tips::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
  width: 20rpx;
  height: 20rpx;
  border: 6rpx solid #FB9335;
  border-radius: 50%;
}

.action-params .action-detail {
  display: flex;
  flex-wrap: wrap;
}

.action-detail .action-rows {
  margin-bottom: 20rpx;
  width: 50%;
  box-sizing: border-box;
  font-size: 26rpx;
  color: #000000;
}

.action-detail .action-rows::before {
  content: '';
  display: inline-block;
  width: 10rpx;
  height: 10rpx;
  background: #FB9335;
  border-radius: 50%;
  transform: translateY(-50%);
}

.action-rows-title {
  display: inline-block;
  width: 144rpx;
  text-align: justify;
  text-align-last: justify;
  margin-left: 14rpx;
}

