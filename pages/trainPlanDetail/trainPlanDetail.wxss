.trainplan-header {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 354rpx;
  background: linear-gradient(90deg, #2664F6 0%, #6996FF 100%);
}

.trainplan-header-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 32rpx;
}

.trainplan-header-box image {
  width: 120rpx;
  height: 120rpx;
}

.trainplan-header-box>text {
  margin-top: 24rpx;
  font-size: 36rpx;
  color: #FFFFFF;
}

/*  */
.train-templete {
  display: flex;
  margin-top: 30rpx;
  justify-content: space-around;
}

.train-templete image {
  width: 36rpx;
  height: 36rpx;
}

.train-templete .template-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 230rpx;
  height: 60rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #2664F6;
}

/*  */
.trainclass-list{
  margin-top: 60rpx;
}
.trainclass {
  display: flex;
  width: 100%;
  height: 120rpx;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  border-bottom: 1px solid #EDEDED;
  padding: 0 40rpx  0  58rpx;
}

.trainclass .trainclass-name {
  position: relative;
  font-size: 30rpx;
  color: #000000;
}
.trainclass .trainclass-name .serial{
  margin-right: 24rpx;
  font-weight: bold;
    color: #000000;
}
.trainclass image{
  width: 36rpx;
  height: 36rpx;
}