.paper {
  position: relative;
  border: 1px solid #dedede;
  margin: 10px;
  height: 160px
}

.repaint {
  width: 120rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 20rpx;
  position: absolute;
  right: 10rpx;
  top: 10rpx;
}

.image {
  border: 1px solid #dedede;
  margin: 10px;
  height: 160px
}

.signBtn {
  display: flex;
  margin-top: 20px;
}

.signTitle {
  text-align: center;
  font-size: 1.2em;
  margin: 10px auto;
}

.handWriting {
  width: 100%
}

.image image {
  width: 100%;
  height: 160px
}