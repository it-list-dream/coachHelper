@import '../../assets/css/flyAnimation.wxss';
.search-list {
  padding-top: 8rpx;
}

.van-icon {
  color: #9D9D9E;
}

.van-search {
  margin-left: 30rpx !important;
  width: 650rpx !important;
  border: 4rpx;
}

.van-search__content {
  height: 70rpx !important;
  background: #F5F5FF !important;
}

.search-cont {
  padding: 0 50rpx;
  box-sizing: border-box;
}

.search-cont .search-item {
  position: relative;
  display: flex;
  align-items: center;
  height: 226rpx;
  box-sizing: border-box;
  border-bottom: 0.5px solid #F7F7F5;
}

.search-item .left-action {
  width: 216rpx;
  height: 146rpx;
  overflow: hidden;
}

.search-item .left-action image {
  width: 100%;
  height: 100%;
}

.search-item .right-action {
  margin-left: 32rpx;
  height: 146rpx;
}

.search-item .right-action>view:first-child {
  font-size: 34rpx;
  color: #222222;
}

.search-item .right-action>view:last-child {
  margin-top: 20rpx;
  color: #A8A8A8;
}

.add-wrap {
  position: absolute;
  right: 0;
  bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 72rpx;
  height: 72rpx;
}

.add-wrap image {
  width: 60rpx;
  height: 60rpx;
}

.bottom-mask {
  position: fixed;
  width: 100%;
  padding:0 30rpx;
  box-sizing: border-box;
  left: 0;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 200rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 20rpx 0px rgba(16, 7, 82, 0.06);
  box-sizing: border-box;
}

.details image {
  width: 25rpx;
  height: 25rpx;
}

.aciton-confrim .btn {
  width: 230rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  background: #2564F6;
  border-radius: 34rpx;
  font-size: 36rpx;
  color: #FFFFFF;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.animat {
  position: fixed;
  top: -60px;
  left: -60px;
}

.animat .icon {
  width: 60rpx;
  height: 60rpx;
}
