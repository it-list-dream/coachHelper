.achievenment {
  padding-bottom: 30rpx;
}

.achievenment-time {
  position: relative;
  font-size: 30rpx;
  color: #2664F6;
  padding: 34rpx 30rpx;
}

.achievenment-time .time-mask {
  position: absolute;
  width: 240rpx;
  height: 116rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 32rpx 0px rgba(21, 51, 113, 0.1);
  box-sizing: border-box;
  padding: 20rpx;
  z-index: 20;
}

.time-mask>view {
  font-size: 24rpx;
  color: #666666;
}
.time-mask>view:last-child{
  margin-top: 16rpx;
}
.achievenment-time text {
  vertical-align: middle;
}

.achievenment-time image {
  width: 36rpx;
  height: 36rpx;
  padding-left: 15rpx;
  vertical-align: middle;
}

.achievenment-content {
  padding: 0 30rpx;
  margin-bottom: 40rpx;
}

.achievenment-item {
  display: flex;
}

.achievenment-item>view:nth-child(-n+2) {
  margin-left: 20rpx;
}

.achievenment-item .bodychange {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  width: 286rpx;
  height: 346rpx;
  background: #E9EFFE;
  border: 1px solid #2564F6;
  border-radius: 8rpx;
  box-sizing: border-box;
  padding: 40rpx 0;
}

.achievenment-item .bodychange .body-name {
  color: #333333;
}

.achievenment-item .bodychange text {
  font-size: 30rpx;
  color: #2564F6;
}

.achievenment-item .bodychange image {
  width: 90rpx;
  height: 90rpx;
}

.achieve-picture {
  position: relative;
  width: 286rpx;
  height: 346rpx;
}

.achieve-picture image {
  width: 100%;
  height: 100%;
}

.achieve-picture .date {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  background: #5D93F8;
  opacity: 0.25;
  border-radius: 0px 0px 8rpx 8rpx;
  font-size: 24rpx;
  color: #FEFEFE;
}

.arrow-box {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.arrow-box .gray {
  width: 40rpx;
  height: 50rpx;
}