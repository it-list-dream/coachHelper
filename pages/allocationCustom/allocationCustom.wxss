/* pages/allocationCustom/allocationCustom.wxss */
.van-icon {
  color: #C2BCBC !important;
}

.scroll {
  margin-top: 6rpx;
  /* background-color: pink; */
}
.scroll-y{
  padding: 0 48rpx;
}
.scroll-item {
  display: flex;
  align-items: center;
  height: 140rpx;
  box-sizing: border-box;
  border-bottom: 0.5px solid  #E6EAF1;
}

.scroll-item .select-icon {
  width: 32rpx;
  height: 32rpx;
}

.scroll-item .select-icon image {
  width: 100%;
  height: 100%;
}
.scroll-item .head{
  width: 80rpx;
  height: 80rpx;
  overflow: hidden;
  margin: 0 30rpx;
}
.scroll-item .head>view{
  width: 100%;
  height: 100%;
  line-height: 80rpx;
  text-align: center;
  background: #4A81FF;
  font-size: 36rpx;
color: #FFFFFF;
}
.scroll-item .head image{
  width: 100%;
  height: 100%;
}
.scroll-item .member-info>text{
  display: block;
}

.member-info text:first-child{
  font-size: 28rpx;
color: #0D0E15;
}
.member-info text:last-child{
  margin-top: 8rpx;
  font-size: 28rpx;
color: #666666;
}
.allocation-btn {
  position: fixed;
  width: 100%;
  padding-bottom: 30rpx;
  bottom: 0;
  left: 0;
}

.allocation-btn .allBtn {
  width: 690rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background: #2564F6;
  border-radius: 8rpx;
  font-size: 30rpx;
  color: #FFFFFF;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}