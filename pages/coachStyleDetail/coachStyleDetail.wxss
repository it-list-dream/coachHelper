.styleDetail {
  padding: 20rpx 30rpx 30rpx;
}

.coach_head {
  display: flex;
  justify-content: center;
}

.coach_head .bannerImage {
  width: 690rpx;
}

.coach_head .default {
  width: 690rpx;
  height: 690rpx;
  line-height: 690rpx;
  text-align: center;
  border: 1px dotted gray;
}

.coach_head .default {
  font-size: 28rpx;
  color: #666666;
}

/*  */
.coachInfo {
  display: flex;
  height: 212rpx;
  align-items: center;
  border-bottom: 0.5px solid #F0F1F3;
}

.coachAvatar image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  vertical-align: bottom;
}

.wrapper {
  margin-left: 32rpx;
}

.coach text {
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: 800;
  color: #000000;
}

.coach image {
  margin-left: 14rpx;
  width: 32rpx;
  height: 32rpx;
}

.coachGoodAt {
  margin-top: 16rpx;
  font-size: 28rpx;
  color: #2765F6;
}

.coachGoodAt text {
  margin-right: 30rpx;
}

/* 介绍 */
.coach_introduce {
  margin-top: 56rpx;
}

.coach_title text {
  position: relative;
  padding-left: 40rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 800;
  color: #000000;
}

.coach_title text::before {
  position: absolute;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
  content: "";
  width: 20rpx;
  height: 20rpx;
  border: 2rpx solid #2765F6;
  border-radius: 50%;
}

.coach_introduce .coach_desc {
  margin-top: 40rpx;
  font-size: 26rpx;
  color: #000000;
  line-height: 48rpx;
  word-break: break-all;
  word-wrap: break-word;
}