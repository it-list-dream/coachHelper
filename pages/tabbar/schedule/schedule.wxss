.scheduleContainer {
  padding-bottom: 100rpx;
}

.van-ellipsis {
  font-size: 34rpx;
}

/*  */
.van-tab__pane {
  padding: 34rpx 30rpx 0;
}

.course-content {
  position: relative;
  display: flex;
  justify-content: space-between;
  width: 690rpx;
  height: 180rpx;
  margin: 0 auto 30rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 20rpx 0px rgba(102, 102, 102, 0.1);
  border-radius: 9rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.course-content::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 10rpx;
  height: 180rpx;
  background: #FB8923;
  border-radius: 8rpx 0px 0px 8rpx;
}


.left-title {
  margin-top: 40rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

.time-wrapper {
  margin-top: 16rpx;
}

.time-wrapper .quantum {
  font-size: 30rpx;
  color: #6C6C6C;
  vertical-align: middle;
  margin-left: 18rpx;
}

.time-wrapper .time {
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
}

.right-box{
  margin-top: 30rpx;
}
.right-box .status {
  display: block;
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 28rpx;
}

.right-box .success {
  border: 2rpx solid #999999;
  border-radius: 12rpx;
  color: #999999;
}

.right-box .beCompleted {
  background: #2564F6;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #FEFEFE;
}

.right-box .already {
  background: #FFFFFF;
  border: 2rpx solid #2564F6;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #2564F6;
}

/* add-appointment */
.add-appointment {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 690rpx;
  height: 180rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 20rpx 0px rgba(102, 102, 102, 0.1);
  border-radius: 9rpx;
  margin-bottom: 120rpx;
}

.add-appointment image {
  width: 40rpx;
  height: 40rpx;
}

.add {
  font-size: 36rpx;
  color: #2564F6;
}