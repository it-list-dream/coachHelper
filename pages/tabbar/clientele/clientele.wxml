<view class="chooseCustomContainer">
  <view class="serach-box">
    <van-search value="{{ value }}" placeholder="请输入会员姓名、手机号" />
    <image class="add" src="/assets/images/add2.png" bindtap="addPeople"></image>
  </view>
  <view class="tabs-list">
    <slideTab tList="{{tabsList}}" bind:changeCurrent="swichNav" currentTab="{{currentActive}}">
      <scroll-view scroll-y="true" style="height: calc({{windowHight}}px - 235px);" bindscroll="scroll" class="clienteList">
        <view class="tab-item" wx:if="{{currentActive ==0}}">
          <view class="custom-list" wx:for="{{memberList}}" wx:key="index" bindtap="memberDetail">
            <image src="/assets/images/photo.png" class="header" wx:if="{{item.img.indexOf('http') ==-1}}"></image>
            <view class="h1" wx:else>{{item.firstName}}</view>
            <view class="custom-info">
              <view>{{item.name}}</view>
              <view>{{item.phone}}</view>
            </view>
          </view>
        </view>
        <view class="tab-item" wx:elif="{{currentActive ==1}}" bindtap="memberDetail">
          <view class="custom-list">
            <image src="/assets/images/photo.png" class="header"></image>
            <view class="custom-info">
              <view>纪灏</view>
              <view>18163451113</view>
            </view>
          </view>
        </view>
      </scroll-view>
    </slideTab>
  </view>
</view>
<tabbar tabbar="{{tabbar}}"></tabbar>