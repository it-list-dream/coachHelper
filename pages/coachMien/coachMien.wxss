.mienContainer .mien-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 322rpx;
  height: 350rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  box-sizing: border-box;
  padding:50rpx 0;
  margin-bottom: 20rpx;
}

.mien-item image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
