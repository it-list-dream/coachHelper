<view class="startclass">
  <van-count-down class="control-count-down" use-slot time="{{ time }}" bind:change="onChange" bind:finish="gameover">
    <view class="count-down">
      <text class="item">{{ timeData.minutes }}:{{ timeData.seconds }}</text>
      /
      <text class="item">{{ time/60/1000 }}:00</text>
      <view class="finished" bindtap="finish">
        <text>结束</text>
      </view>
    </view>
  </van-count-down>
  <view class="actionAll">
    <view class="actionbtn" bindtap="lookallAction">全部动作</view>
    <view class="{{currentAction == idx ?'':'hidden'}}" wx:for="{{actionList}}" wx:for-index="idx" wx:key="idx">
      <view class="instrument">
        <view class="triangle-box">
          <image class="left" src="/assets/images/triangle.png"></image>
          <text>箭步蹲</text>
        </view>
        <view class="current-action">四足支撑</view>
        <view class="triangle-box">
          <text>跪资俯卧撑</text>
          <image class="right" src="/assets/images/triangle.png"></image>
        </view>
      </view>
      <!-- 全部动作 -->
      <view class="instrument-content">
        <view class="instrument-title">
          <text>数量</text>
          <text>重量</text>
          <text>休息</text>
          <text>器械</text>
        </view>
        <view class="instrument-table">
          <view class="instrument-table-tr" wx:for="{{actionList[currentAction].groupList}}" wx:for-index="j" wx:key="j">
            <view class="left-td">
              <text>{{item.actionCount}}</text>
              <text>{{item.instrumentWeight}}</text>
              <text>{{item.restTime}}</text>
              <text>{{item.instrument}}</text>
            </view>
            <view class="right-td">
              <view class="right-td-item" wx:if="{{item.open}}">
                <block wx:for="{{memeList}}" wx:key="index" wx:for-item="meme">
                  <text style="color:{{item.statusIndex == index?'#2564F6':''}}" bindtap="estimate" data-current="{{j}}" data-index="{{index}}">
                    {{meme}}
                  </text>
                </block>
              </view>
              <view class="td-checked" data-current="{{j}}" bindtap="openMeme" wx:else>{{memeList[item.statusIndex]}}</view>
            </view>
          </view>
          <view class="ohter-tr">+添加组</view>
        </view>
      </view>
    </view>
  </view>
</view>