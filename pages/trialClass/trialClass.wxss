/* pages/trialClass/trialClass.wxss */
.train_header {
  height: 410rpx;
  background: #2664F6;
}

.train_picture {
  padding-top: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.picture_box {
  padding-top: 20rpx;
  text-align: center;
}

.picture_box image {
  width: 150rpx;
  height: 150rpx;
  vertical-align: bottom;
}

.trainer_name {
  margin-top: 16rpx;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}

.train_add_btn {
  margin-top: 50rpx;
  width: 230rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #FFFFFF;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #2664F6;
}

/*  */
.trial-content .trial-record {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 120rpx;
  padding: 0 50rpx 0 60rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #EDEDED;
}

.trial-record .left-record .serial {
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #000000;
}

.trial-record .left-record .trial-name {
  padding-left: 20rpx;
  font-size: 30rpx;
  color: #000000;
}

.trial-record .right-record {
  display: flex;
  align-items: center;
}

.right-record .right-status {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 26rpx;
  color: #999999;
  margin-right: 18rpx;
}

.right-record .right-status text:last-child {
  margin-top: 12rpx;
}

.right-record .right-icon {
  width: 24rpx;
  height: 24rpx;
}

/*  */
.trial-poupon {
  width: 100%;
  height: 100rpx;
  background: #EAECEF;
}

.trial-poupon .trial-header {
  width: 100%;
  display: flex;
  height: 100%;
  line-height: 100rpx;
  justify-content: space-between;
}

.trial-poupon .trial-header .trial-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #222222;
}

.trial-poupon .trial-header .text {
  padding: 0 30rpx;
  font-size: 30rpx;
  color: #2564F6;
}

.trial-poupon-content {
  overflow-y: auto;
  padding: 0 40rpx;
}

.trial-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  line-height: 100rpx;
  height: 100rpx;
  border-bottom: 1px solid #DFDFDF;
}

.trial-row text {
  font-size: 30rpx;
  color: #222222;
}

.trial-row image {
  width: 36rpx;
  height: 36rpx;
}