/* pages/addCustom/addCustom.wxss */
page {
  background-color: #F2F4F8;
}

.addCustomInform {
  padding: 0 40rpx;
  background-color: #ffffff;
}

.photo-wrapper {
  padding-top: 30rpx;
  text-align: center;
}

.photo-wrapper>image {
  width: 120rpx;
  height: 120rpx;
}

.flex {
  display: flex;
  height: 120rpx;
  align-items: center;
  justify-content: space-between;
  border-bottom: 0.5px solid #EDEDED;
}

input {
  text-align: right;
}

.placeholder {
  text-align: right;
  font-size: 30rpx;
  color: #C3C3C3;
}

.chooseSex {
  display: flex;
  justify-content: space-between;
  width: 210rpx;
}

.sex {
  width: 90rpx;
  height: 42rpx;
  line-height: 42rpx;
  text-align: center;
  border: 1px solid #D2D2D2;
  border-radius: 22rpx;
  font-size: 30rpx;
  color: #C3C3C3;
}

.sex-active {
  background: #3B8EF1;
  color: #ffffff;
  border: none;
}

.picker {
  font-size: 30rpx;
}

.targetFitness {
  margin-top: 30rpx;
  width: 750rpx;
  /* height: 551rpx; */
  background: #FFFFFF;
  box-sizing: border-box;
}

.fitness-title {
  padding: 0 16rpx 0 40rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  box-sizing: border-box;
}

.targetFitness .set-box {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80rpx;
  height: 100%;
}

.targetFitness .set {
  width: 34rpx;
  height: 34rpx;
}

.fitness-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.pouponWrapper {
  position: relative;
  overflow: hidden;
}

.popupTag {
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 40rpx;
  background: #EAECEF;
  box-sizing: border-box;
  font-size: 32rpx;
}

.cancel1 {
  color: #999999;
}

.setTag {
  color: #222222;
}

.confrim1 {
  color: #2564F6;
}

.tag-content {
  /* padding: 0 40rpx; */
  height: 800rpx;
  width: 100%;
  white-space: nowrap;
}

.tag-content .fitnesss-action {
  position: relative;
  height: 110rpx;
  box-sizing: border-box;
  line-height: 110rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 36rpx;
  color: #222222;
  padding: 0 40rpx;
  box-sizing: border-box;
}


.tag-content .new-tags {
  position: relative;
  font-size: 36rpx;
  color: #999999;
  height: 110rpx;
  line-height: 110rpx;
  margin-bottom: 30rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
}
.tag-content .fitnesss-action::after,.tag-content .new-tags::after{
  content: '';
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
  width: 672rpx;
  height: 1px;
  background: #DFDFDF;
}

.content {
  margin-top: 40rpx;
  padding: 0 40rpx;
}

.textarea {
  width: 100%;
  min-height: 120rpx;
  height: auto;
}

.fitness-type {
  padding: 0 25rpx;
  display: flex;
  /* margin-top: 35rpx; */
  flex-wrap: wrap;
}

.fitness-type .fitness-active {
  background: #3B8EF1;
  color: #FFFFFF;
  border: 1px solid transparent;
}

.fitnessTag {
  margin: 0 15rpx 40rpx;
  font-size: 30rpx;
  padding: 6rpx 24rpx;
  border: 1px solid #D2D2D2;
  color: #C3C3C3;
  border-radius: 26rpx;
  box-sizing: border-box;
}

.remark-box {
  padding: 0 39rpx;
  margin-top: 40rpx;
}

.remark-title {
  font-size: 30rpx;
  color: #333333;
}

.remark-box .remark-textarea {
  margin-top: 31rpx;
  width: 669rpx;
  height: 376rpx;
  border: 1px dotted #A7A7A7;
  box-sizing: border-box;
}

.remark-box .remark-textarea textarea {
  width: 100%;
  padding: 26rpx 20rpx;
  box-sizing: border-box;
}

.save {
  display: flex;
  justify-content: center;
  margin-top: 150rpx;
  padding-bottom: 30rpx;
}

.save .saveBtn {
  width: 620rpx;
  height: 86rpx;
  background: #2564F6;
  border-radius: 12rpx;
  font-size: 32rpx;
  color: #FFFFFF;
  font-weight: 500;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: #ffffff;
}