/* ppages/stadiumData/stadiumData.wxss */
page {
  background-color: #F7F4FB;
}

.stadiumContainer {
  padding: 30rpx;
}

.stadium-item {
  display: flex;
  justify-content: space-between;
  width: 690rpx;
  padding: 24rpx 40rpx 30rpx;
  height: 326rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
  box-sizing: border-box;
  margin-bottom: 30rpx;
}

.sta-introduce .sta-title {
  margin-top: 30rpx;
  font-size: 40rpx;
  font-weight: bold;
  color: #222222;
}

.sta-introduce .sta-content {
  margin-top: 15rpx;
  font-size: 30rpx;
  color: #B0B0B0;
}

.sta-introduce .look-more {
  margin-top: 60rpx;
  width: 180rpx;
  height: 52rpx;
  line-height: 52rpx;
  text-align: center;
  background: linear-gradient(0deg, #2664F6 0%, #6897FE 100%);
  border-radius: 26rpx;
  font-size: 30rpx;
  color: #FFFFFF;
}

.stadium-item .img-box {
  /* margin-top: 30rpx; */
  width: 174rpx;
  height: 174rpx;
}

.stadium-item .img-box image {
  width: 100%;
  height: 100%;
}