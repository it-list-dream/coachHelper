<view class="contractContainer">
  <view class="contract-tips">
    <view>客户</view>
    <view>迪迪 <text>15232882111</text></view>
  </view>
  <!--  -->
  <view class="class-list">
    <view class="class-type-row" wx:for="{{3}}">
      <view class="class-title">女性塑形课程</view>
      <view class="class-info">
        ￥300.0
        <text>x 10</text>
        <text>￥3000.0</text>
      </view>
    </view>

    <view class="class-row">
      共30节课，合计 <text class="classTotalPrice">￥ 9000.0</text>
    </view>
  </view>

  <view class="cell-group">
    <view class="cell">
      <view class="cell-title">销售日期</view>
      <view class="cell-content">2022-01-13</view>
    </view>

    <view class="cell">
      <view class="cell-title">支付方式</view>
      <view class="cell-content">
        <picker mode="selector" bindchange="payChange" range="{{methodsList}}">
          <view class="picker-pay" style="color:{{!methodsList[payIndex]?'#A7A7A7':'#222222'}}">
            {{!methodsList[payIndex]?'请选择':methodsList[payIndex]}}
            <image src="/assets/images/right_arrow.png" class="cell-icon"></image>
          </view>
        </picker>
      </view>
    </view>
  </view>

  <van-popup show="{{ showPay}}" bind:close="onClose">
    <view class="pay-box">
      <view class="pay-title">线上支付</view>
      <view class="wechat-code">
        <image src="/assets/images/code.png" class="wechat-icon"></image>
      </view>
      <view class="pay-bottom">
        <image src="/assets/images/wechat1.png" class="w-icon"></image>
        <text>微信支付</text>
      </view>
    </view>
  </van-popup>
</view>