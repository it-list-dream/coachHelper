/* pages/coursePlanning/coursePlanning.wxss */
.classPlainContainer .tab-wrapper {
  padding-top: 30rpx;
  width: 100%;
}

.tab-scroll-view {
  display: flex;
  width: 100%;
  height: 100rpx;
  border-top: 1px solid #EDEDED;
  border-bottom: 1px solid #EDEDED;
  box-sizing: border-box;
}

.tab-scroll-view .tab-item {
  position: relative;
  height: 100%;
  line-height: 100rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  flex-shrink: 0;
}

.tab-scroll-view .tab-active::after {
  content: "";
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 10rpx;
  width: 56rpx;
  height: 6rpx;
  background: #2664F6;
}

.btn-list {
  display: flex;
  height: 100%;
  align-items: center;
  margin-left: 30rpx;
}

.addPlain {
  width: 70rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  background: #2664F6;
  border-radius: 12rpx;
  font-size: 42rpx;
  color: #FFFFFF;
  margin: 0 !important;
}

.tab-content {
  padding: 0 30rpx;
}

.tab-content .tab-content-title {
  padding: 36rpx 0;
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.tab-content .class-item {
  position: relative;
  width: 690rpx;
  height: 231rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 20rpx 0px rgba(16, 7, 82, 0.06);
  border-radius: 12rpx;
  padding: 30rpx;
  box-sizing: border-box;
  margin: 0 auto;
  margin-bottom: 30rpx;
}

.tab-content .class-item .class-tips {
  display: flex;
  height: 120rpx;
}

.class-item .class-picture {
  width: 180rpx;
  height: 100%;
  border-radius: 4rpx;
  overflow: hidden;
  flex-shrink: 0;
}

.class-item .class-picture image {
  width: 100%;
  height: 100%;
}

.class-info {
  margin-left: 30rpx;
  height: 100%;
  flex: 1;
}

.class-info .class-name {
  margin-top: 10rpx;
  font-size: 34rpx;
  color: #333333;
}

.class-info .class-price {
  margin-top: 22rpx;
  font-size: 30rpx;
  color: #FF5C64;
}

.close {
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 0;
  right: 0;
  width: 64rpx;
  height: 64rpx;
  z-index: 10;
}

.close image {
  width: 32rpx;
  height: 32rpx;
}

.number-box {
  display: flex;
  justify-content: flex-end;
}

.addClassWrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 690rpx;
  height: 140rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 20rpx 0px rgba(16, 7, 82, 0.06);
  border-radius: 12rpx;
  font-size: 36rpx;
  color: #2664F6;
  margin: 0 auto;
  margin-bottom: 20rpx;
}

.class-bottom-plain {
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 100%;
  height: 200rpx;
  background: #FFFFFF;
  box-sizing: border-box;
  box-shadow: 0px 0px 20px 0px rgba(16, 7, 82, 0.06);
}

.class-bottom-plain .totalPrice {
  font-size: 36rpx;
  color: #333333
}

.class-bottom-plain .price-confrim {
  width: 350rpx;
  height: 76rpx;
  text-align: center;
  line-height: 76rpx;
  border-radius: 38rpx;
  font-size: 36rpx;
  color: #FFFFFF;
  outline: none;
  border: none;
  background: #2664F6;
  margin: 0 !important;
}