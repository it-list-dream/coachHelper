/* pages/trainning/trainning.wxss */
.train_header {
   height: 460rpx;
   background: #2664F6;
}

.train_picture {
   display: flex;
   flex-direction: column;
   justify-content: center;
   align-items: center;
}

.picture_box {
   padding-top: 20rpx;
   text-align: center;
}

.picture_box image {
   width: 150rpx;
   height: 150rpx;
   vertical-align: bottom;
}

.trainer_name {
   margin-top: 16rpx;
   font-size: 36rpx;
   font-family: PingFang SC;
   font-weight: 500;
   color: #FFFFFF;
}

.train_add_btn {
   margin-top: 50rpx;
   width: 230rpx;
   height: 60rpx;
   line-height: 60rpx;
   text-align: center;
   background: #FFFFFF;
   border-radius: 12rpx;
   font-size: 28rpx;
   color: #2664F6;
}

/*  */
.train-content {
   transform: translateY(-60rpx);
}

.train-content .train-item {
   position: relative;
   width: 690rpx;
   min-height: 234rpx;
   background: #FFFFFF;
   box-shadow: 0px 0px 20rpx 0px rgba(0, 30, 101, 0.14);
   border-radius: 12rpx;
   margin: 0 auto;
   margin-bottom: 20rpx;
   padding: 32rpx 64rpx;
   box-sizing: border-box;
}

.train-content .train-item image {
   position: absolute;
   top: 0;
   left: 18rpx;
   width: 31rpx;
   height: 45rpx;
}

.train-item .train-info {
   font-size: 32rpx;
   color: #000000;
}

.train-item .train-info text:last-child {
   margin-left: 20rpx;
}

.train-item .train-tag {
   margin: 22rpx 0;
   font-size: 28rpx;
   line-height: 1.5;
   color: #010101;
}

.train-item .train-timer {
   display: flex;
   justify-content: space-between;
   font-size: 28rpx;
   font-weight: bold;
   color: #000000;
}