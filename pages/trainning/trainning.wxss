page {
   background-color: #F6F6FF;
   height: 100%;
}

.train-head {
   height: 340rpx;
   background: #2664F6;
}

.avatar-list {
   display: flex;
   justify-content: center;
   align-items: center;
   flex-direction: column;
}

.avatar-list .pic_bg image {
   width: 120rpx;
   height: 120rpx;
   border-radius: 50%;
   vertical-align: bottom;
}

.avatar-list .custom {
   margin-top: 22rpx;
   font-size: 36rpx;
   font-family: PingFang;
   color: #FFFFFF;
}

.train-add {
   display: flex;
   justify-content: center;
   align-items: center;
   margin-top: 34rpx;
   padding: 0 !important;
   width: 230rpx;
   height: 60rpx;
   background: #FFFFFF;
   border-radius: 12rpx;
   font-size: 28rpx;
   color: #2664F6;
}

.train-add span {
   font-size: 36rpx;
}

.scroll-content .train-detail {
   position: relative;
   display: flex;
   width: 690rpx;
   height: 186rpx;
   background: #FFFFFF;
   box-shadow: 0px 0px 14rpx 0px rgba(0, 34, 112, 0.08);
   box-sizing: border-box;
   padding: 48rpx 0;
   overflow: hidden;
   margin: 0 auto 30rpx;
}

.oper-wrap {
   display: flex;
   position: absolute;
   right: 6rpx;
   top: 34rpx;
}

.oper-wrap .i-box {
   display: flex;
   width: 64rpx;
   height: 64rpx;
   align-items: center;
   justify-content: center;
}

.oper-wrap .i-box image {
   width: 32rpx;
   height: 32rpx;
}

.scroll-content .train-detail:first-child {
   margin-top: 20rpx;
}

.train-detail .icon-wrap {
   margin: 0 30rpx 0 32rpx;
   width: 86rpx;
   height: 86rpx;
}

.train-info {
   display: flex;
   flex-direction: column;
   justify-content: space-between;
   height: 100%;
}


.train-detail .icon-wrap image {
   width: 100%;
   height: 100%;
}

.train-detail .per-desc {
   display: flex;
   align-items: center;
}

.per-desc .coach {
   font-size: 28rpx;
   color: #333333;
}

.per-desc .icon-list {
   margin-left: 26rpx;
   font-size: 28rpx;
   color: #A2A2A2;
}

.per-desc .icon-list image {
   width: 24rpx;
   height: 24rpx;
   vertical-align: middle;
}

.per-desc .icon-list span {
   vertical-align: middle;
   margin-left: 4rpx;
}

.train-info .fit-tag {
   font-size: 28rpx;
   color: #A2A2A2;
}