page {
   background-color: #F6F6FF;
   height: 100%;
}

.train-head {
   height: 340rpx;
   background: #2664F6;
}

.avatar-list {
   display: flex;
   justify-content: center;
   align-items: center;
   flex-direction: column;
}

.avatar-list .pic_bg image {
   width: 120rpx;
   height: 120rpx;
   border-radius: 50%;
   vertical-align: bottom;
}

.avatar-list .custom {
   margin-top: 22rpx;
   font-size: 36rpx;
   font-family: PingFang;
   color: #FFFFFF;
}

.train-add {
   display: flex;
   justify-content: center;
   align-items: center;
   margin-top: 34rpx;
   padding: 0 !important;
   width: 230rpx;
   height: 60rpx;
   background: #FFFFFF;
   border-radius: 12rpx;
   font-size: 28rpx;
   color: #2664F6;
}

.train-add span {
   font-size: 36rpx;
}

/*  */
.scroll-content {
   box-sizing: border-box;
   padding: 0 30rpx;
}

.van-swipe-cell__right {
   display: flex;
}

.van-swipe-cell__right .cell-rows {
   width: 170rpx;
   height: 186rpx;
   line-height: 186rpx;
   text-align: center;
   color: #FFFFFF;
   font-size: 36rpx;
   box-shadow: 0px 0px 14rpx 0px rgba(0, 34, 112, 0.08);
}

.van-swipe-cell__right .cell-edit{
   background: #D9D9D9;
}

.van-swipe-cell__right .cell-delete{
   background: #F93030;
   border-radius: 0px 12rpx 12rpx 0px;
}

.scroll-content .train-detail {
   display: flex;
   width: 690rpx;
   height: 186rpx;
   background: #FFFFFF;
   box-shadow: 0px 0px 14rpx 0px rgba(0, 34, 112, 0.08);
   box-sizing: border-box;
   padding: 48rpx 0;
   overflow: hidden;
   margin-bottom: 30rpx;
}
.scroll-content .train-detail:first-child{
   margin-top: 20rpx;
}
.train-detail .icon-wrap {
   margin: 0 30rpx 0 32rpx;
   width: 86rpx;
   height: 86rpx;
}

.train-info {
   display: flex;
   flex-direction: column;
   justify-content: space-between;
   height: 100%;
}


.train-detail .icon-wrap image {
   width: 100%;
   height: 100%;
}

.train-detail .per-desc {
   display: flex;
   align-items: center;
}

.per-desc .coach {
   font-size: 28rpx;
   color: #333333;
}

.per-desc .icon-list {
   margin-left: 26rpx;
   font-size: 28rpx;
   color: #A2A2A2;
}

.per-desc .icon-list image {
   width: 24rpx;
   height: 24rpx;
   vertical-align: middle;
}
.per-desc .icon-list span{
   vertical-align: middle;
   margin-left: 4rpx;
}
.train-info .fit-tag{
   font-size: 28rpx;
   color: #A2A2A2;
 }