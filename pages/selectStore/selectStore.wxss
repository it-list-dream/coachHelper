/* pages/selectStore/selectStore.wxss */
page {
  background-color: #F5F5FF;
}

.gym {
  width: 100%;
  height: auto;
  padding: 0 30rpx;
  background-color: #ffffff;
  box-sizing: border-box;
}

.gym:nth-child(n+2) {
  margin-top: 20rpx;
}

.gym .brand {
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 1px solid #DEDEDE;
  font-weight: bold;
}

.gym .brand .brand-name {
  color: #2664F6;
}

.store-detail {
  position: relative;
  width: 100%;
  height: 158rpx;
  padding: 20rpx 0;
  box-sizing: border-box;
  font-size: 30rpx;
  border-bottom: 1px solid #DEDEDE;
}

.store-detail:last-child {
  border-bottom: none;
}

.store-detail>view:first-child {
  margin-top: 16rpx;
  font-weight: bold;
  color: #000000;
}

.store-detail .gym-address{
  color: #333333;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.selfStore {
  position: absolute;
  top: 12rpx;
  right: 0;
  width: 147rpx;
  height: 51rpx;
  line-height: 51rpx;
  text-align: center;
  background: #FB8923;
  border-radius: 9rpx;
  font-size: 28rpx;
  color: #FFFFFF;
}