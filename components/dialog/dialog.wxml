<view class='wx_dialog_container' wx:if="{{isShow}}">
  <view class='wx-mask'></view>
  <view class='wx-dialog'>
    <view class='wx-dialog-title'>添加跟进记录</view>
    <view class='wx-dialog-content'>
     <textarea value="{{tagValue}}" class="textarea" 	placeholder-style="color:#999999;" placeholder="请输入内容" bindinput="getTagContent" fixed></textarea>
     <view class="count">{{tagValue.length}}/140</view>
    </view>
    <view class='wx-dialog-footer'>
      <view class='wx-dialog-btn' catchtap='_cancelEvent'>取消</view>
      <view class='wx-dialog-btn' catchtap='_confirmEvent'>保存</view>
    </view>
  </view>
</view>