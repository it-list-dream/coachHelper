/* components/van-model/van-model.wxss */
/* 弹窗 */
.p-container {
    width: 690rpx;
    /* height: 394rpx; */
    height: auto;
    background: #FFFFFF;
}

.poupon-content {
    display: flex;
    flex-wrap: wrap;
}

.poupon-title {
    text-align: center;
    font-size: 30rpx;
    color: #222222;
    padding: 28rpx 0 34rpx;
}

.poupon-content {
    padding: 0 20rpx;
}

.poupon-content .poupon-item {
    margin: 0 15rpx 30rpx;
    width: 126rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    background: #E5E5E5;
    border-radius: 20rpx;
    font-size: 26rpx;
    color: #5C5C5C;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}


.poupon-content .active-item {
    background-color: #2664F6;
    color: #ffffff;
}

.poupon-button {
    margin-top: 60rpx;
    padding-bottom: 30rpx;
    display: flex;
    justify-content: space-evenly;
}

.poupon-button .button {
    width: 178rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    box-sizing: border-box;
    font-size: 26rpx;
    border-radius: 25rpx;
    outline: none;
}
button::after {
    border: none;
 }
.poupon-button .cancel {
    border: 2rpx solid #E2E2E2;
    color: #5C5C5C;
}

.poupon-button .confrim {
    background: #2664F6;
    color: #FFFFFF;
    border: none;
}

.defined {
    width: 126rpx;
    height: 40rpx;
    line-height: 40rpx;
    background: #E5E5E5;
    border-radius: 20px;
    text-align: center;
    font-size: 26rpx;
    color: #888888;
    margin:0 15rpx;
}