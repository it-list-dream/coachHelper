.calendar {
  background: linear-gradient(180deg, #2564F6 50%, #6996FF 100%);
}

.flex {
  display: flex;
  justify-content: center;
  align-items: center;
}

.direction-column {
  flex-direction: column;
}

.calendar-title {
  padding: 0 122rpx;
  font-size: 34rpx;
  color: #FFFFFF;
}

.flex1 {
  flex: 1;
}

.icon-arrow {
  width: 30rpx;
  height: 40rpx;
}

.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.flex-start {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.flex-end {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.flex-around {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.flex-wrap {
  flex-wrap: wrap;
}

.align-start {
  align-items: flex-start;
}

.align-end {
  align-items: flex-end;
}

.align-stretch {
  align-items: stretch;
}

.calendar .title {
  font-size: 40rpx;
  color: #333;
  padding: 30rpx;
  line-height: 60rpx;
}

.calendar .title .year-month {
  margin-right: 20rpx;
}

.calendar .title .icon {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 72rpx;
  height: 72rpx;
}


.calendar .calendar-week {
  line-height: 40rpx;
  padding: 0 25rpx;
  font-size: 28rpx;
  color: #ffffff;
}

.calendar .calendar-week .view {
  width: 100rpx;
  text-align: center;
}

.calendar .calendar-main {
  position: relative;
  padding: 30rpx 25rpx;
  transition: height 0.3s;
  align-content: flex-start;
  overflow: hidden;
  z-index: 10;
}

.calendar .calendar-main .day {
  /* position: relative; */
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100rpx;
  color: #666;
  text-align: center;
  height: 72rpx;
}

.calendar .calendar-main .day .bg {
  height: 56rpx;
  line-height: 56rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #FFFFFF;
}

.calendar .calendar-main .day .select {
  width: 56rpx;
  margin: 0 auto;
  border-radius: 50%;
  text-align: center;
  color: #fff;
  background: #FFFFFF;
  font-weight: bold;
  color: #2564F6;

}

.calendar .calendar-main .day .other-month {
  color: #6D99FF;
}

.calendar .calendar-main .day .spot {
  width: 8rpx;
  height: 8rpx;
  background-color: #1DCDB8;
  border-radius: 50%;
  margin: 6rpx auto 0;
}

.arrow {
  margin-left: 6rpx;
  font-size: 20rpx
}

.calendar__month-mark {
  position: absolute;
  top: -100rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 400rpx;
  background: linear-gradient(180deg, #316FFF 50%, #6795FF 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  z-index: -1;
}

.on-off {
   padding: 12rpx 0;
}

.blockage {
  margin: 0 auto;
  width: 80rpx;
  height: 10rpx;
  background: #E6E6E6;
  border-radius: 4rpx
}