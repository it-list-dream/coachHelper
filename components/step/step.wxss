/* 每一行数据容器 */
.r-wrap {
  position: relative;
  display: flex;
}

.r-wrap .r-wrap-title {
  position: absolute;
  top: 20rpx;
  left: 0px;
  font-size: 26rpx;
  color: #333333;
}

.r1 {
  width: 100%;
}

.r-wrap-item {
  display: flex;
}

/* 左边容器 */
.r-item-left {
  display: flex;
  flex-direction: column;
  width: 100rpx;
}

/* 左边容器子项 */
.r-item-left .r-item-left-crd {
  flex: 1;
  border-right: 1rpx solid #D5D5D5;
}

.r-item-right-content {
  display: flex;
  justify-content: space-between;
}

.r-item-text {
  display: flex;
  font-size: 28rpx;
  color: #333333;
}

.r-item-text>text:first-child {
  margin-right: 20rpx;
}

.r-item-time {
  font-size: 28rpx;
  color: #999999;
}

/* 点容器 */
.r-item-left .r-point-wrap {
  position: relative;
}

/* 点容器子项 */
.r-item-left .r-point-wrap .r-point-item {
  position: absolute;
  top: -10rpx;
  left: 92rpx;
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  background: #ccc;
}

/* 左子项不要边框块 */
.r-item-left .r-item-left-crd.first,
.r-item-left-crd.last {
  flex: 1;
  border: none;
}

/* 右容器 */
.r-item-right {
  display: flex;
  flex-direction: column;
  flex: 10;
  font-size: 30rpx;
  padding: 20rpx 0px 30rpx 20rpx;
}

.r-item-right .r-item-right-time {
  font-size: 26rpx;
  color: #B4B4B4;
}

/*  */
.edit-content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100%;
  min-height: 166rpx;
  border: 1px dotted #A7A7A7;
}

.edit-content .edit-item {
  font-size: 24rpx;
  color: #333333;
}

.edit-icon {
  display: flex;
  justify-content: flex-end;
}

.edit-icon .icon-box {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #2564F6;
  padding: 0 24rpx;
}

.edit-icon .icon-box .icon {
  width: 28rpx;
  height: 28rpx;
}