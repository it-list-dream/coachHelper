.popup-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  align-items: center;
  padding: 0 30rpx;
  height: 100rpx;
  background: #EAECEF;
}

.popup-title text {
  height: 100%;
  line-height: 100rpx;
}

.popup-title .cancel {
  padding: 0 10rpx;
  font-size: 32rpx;
  color: #999999;
}

.popup-title .title {
  font-size: 32rpx;
  color: #222222;
}

.popup-title .confrim {
  font-size: 32rpx;
  color: #2564F6;
}

.popup-content {
  padding: 0 40rpx;
}

.popup-content .popup-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 110rpx;
  box-sizing: border-box;
  border-bottom: 0.5px solid #DFDFDF;
  font-size: 36rpx;
  color: #222222;
}

.popup-content .popup-item image {
  width: 32rpx;
  height: 32rpx;
}