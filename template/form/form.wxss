@import '/assets/css/form.wxss';

.question-topic {
  padding: 50rpx 0 40rpx;
  border-bottom: 0.5px solid #EDEDED;
}

.radio-item {
  margin-top: 36rpx;
}

.radio-list .radio-group {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}

.radio-group .weui-cell {
  display: flex;
  align-items: center;
  width: 100%;
  margin-bottom: 40rpx;
}

.weui-cell .weui-cell__value {
  margin-left: 12rpx;
}

/* 多选 */
.checkbox-group {
  margin-top: 34rpx;
}

.checkbox-group .c-group {
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
}

.c-group .weui-cell-checkbox {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  margin-right: 80rpx;
  margin-bottom: 34rpx;
}

.c-group .checkbox-value {
  margin-left: 12rpx;
}

.self-defined {
  font-size: 30rpx;
  font-family: PingFang SC;
  color: #C5C5C5;
}

/*  */
.textarea-topic {
  padding: 30rpx 38rpx 38rpx;
  font-size: 30rpx;
  color: #333333;
}

.textarea-box {
  margin: 0 auto;
  width: 612rpx;
  height: 270rpx;
  border: 0.5px dotted #D7D4ED;
}
.textarea-box .my-textarea{
  width: 100%;
  padding: 30rpx;
  height: 270rpx;
  box-sizing: border-box;
}