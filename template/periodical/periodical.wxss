/* template/periodical/periodical.wxss */
.stage-item {
  background-color: #FFFFFF;
  padding-bottom: 30rpx;
  margin-bottom: 20rpx;
}
.stage-item .stage-title {
  padding: 0 32rpx;
  font-size: 36rpx;
  color: #000000;
}
.stage-item:nth-child(n+2) .stage-title{
  padding: 30rpx 32rpx 10rpx;
}
.stage-item .stage-row {
  position: relative;
  width: 690rpx;
  min-height: 136rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 20rpx 0px rgba(0, 30, 101, 0.14);
  border-radius: 10rpx;
  box-sizing: border-box;
  margin: 0 auto;
  margin-top: 20rpx;
  padding: 20rpx 34rpx;
  overflow: hidden;
}
.stage-item .stage-row::before{
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 6rpx;
  height: 100%;
  background-color: #2565F6;
}

.stage-item .stage-row>view:first-child {
  font-size: 30rpx;
  color: #2565F6;
}

.stage-item .stage-row>view:last-child {
  margin-top: 16rpx;
  font-size: 26rpx;
  color: #333333;
}

