.body-change {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 690rpx;
  height: 261rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 20rpx 0px rgba(0, 30, 101, 0.14);
  border-radius: 20rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  padding: 40rpx 40rpx 40rpx 52rpx;
  box-sizing: border-box;
}

.body-change-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.body-change-item .fData {
  vertical-align: middle;
  font-size: 30rpx;
  color: #010101;
}

.body-change-item .fData image {
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
}

/*  */
.stage-change-list {
  margin-top: 30rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
}

.stage-change-list .changeItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 220rpx;
  height: 136rpx;
  padding: 26rpx 0;
  box-sizing: border-box;
  background: linear-gradient(0deg, #2564F6 0%, #6796FF 100%);
  border-radius: 9rpx;
  font-size: 30rpx;
  color: #FFFFFF;
}