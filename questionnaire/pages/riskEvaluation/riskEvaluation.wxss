/* 签字 */
.signature-box {
  margin-top: 160rpx;
  padding-bottom: 100rpx;
}

.signature-box .signature-title {
  padding: 0 70rpx 0 40rpx;
  font-size: 32rpx;
  color: #FFFFFF;
  line-height: 1.5;
}

.signature-box .submit {
  margin: 0 auto;
  margin-top: 112rpx;
  width: 620rpx;
  height: 86rpx;
  line-height: 86rpx;
  text-align: center;
  background: #FF9E00;
  border-radius: 12rpx;
  font-size: 32rpx;
  color: #FFFFFF;
}

/* 签字版 */
.paper {
  position: relative;
  margin: 0 auto;
  margin-top: 48rpx;
  width: 668rpx;
  height: 468rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
}

.paper .handWriting {
  width: 100%;
  height: 100%;
}

.paper .refresh {
  display: flex;
  align-items: center;
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  z-index: 99;
}

.refresh cover-image {
  width: 36rpx;
  height: 36rpx;
}

.refresh .resetWrite {
  margin-left: 18rpx;
  font-size: 30rpx;
  color: #000000;
}