@import '../../../template/form/form.wxss';
page{
  height: 100%;
}
.riskEvaliation {
  position: relative;
  width: 100%;
  min-height: 100%;
  height: auto;
  background: linear-gradient(0deg, #597AF5 0%, #5D3DCA 100%);
  background-repeat: no-repeat;
}

.risk_picture {
  position: relative;
  width: 100%;
  height: 390rpx;
}

.risk_picture>image {
  position: absolute;
  top: 0;
  right: 0;
  width: 690rpx;
  height: 100%;
}

 .risk-title {
  margin-top: 48rpx;
  padding: 0 60rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  color: #FFFEFE;
  line-height: 1.5;
}

/*  */
.question-list {
  margin: 60rpx 0;
}
/*  */
.radio-list {
  margin: 0 auto;
  width: 690rpx;
  /* height: 430rpx; */
  min-height: 430rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  padding: 0 36rpx;
  box-sizing: border-box;
}

.hide {
  display: none;
}

.checkbox-list {
  margin: 0 auto;
  width: 690rpx;
  min-height: 430rpx;
  padding: 0 36rpx;
  background: linear-gradient(0deg, #E5E6FF 0%, #FFFFFF 100%);
  border-radius: 12rpx;
  box-sizing: border-box;
}

.textarea-wrapper {
  margin: 0 auto;
  width: 690rpx;
  min-height: 410rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  overflow: hidden;
  padding-bottom: 60rpx;
}
/*  */
.question-tips {
  display: flex;
  /* justify-content: space-between; */
  padding:40rpx 50rpx 80rpx;
  font-size: 36rpx;
  line-height: 1.2;
  color: #FFBE53;
}

