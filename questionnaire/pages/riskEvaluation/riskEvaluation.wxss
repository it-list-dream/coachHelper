@import '../../../template/form/form.wxss';
page{
  height: 100%;
}
.riskEvaliation {
  position: relative;
  width: 100%;
  min-height: 100%;
  height: auto;
  background: linear-gradient(0deg, #597AF5 0%, #5D3DCA 100%);
  background-repeat: no-repeat;
}

.risk_picture {
  position: relative;
  width: 100%;
  height: 390rpx;
}

.risk_picture>image {
  position: absolute;
  top: 0;
  right: 0;
  width: 690rpx;
  height: 100%;
}

 .risk-title {
  margin-top: 48rpx;
  padding: 0 60rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  color: #FFFEFE;
  line-height: 1.5;
}

/*  */
.question-list {
  margin: 60rpx 0;
}
/*  */
.radio-list {
  margin: 0 auto;
  width: 690rpx;
  height: 430rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  padding: 0 36rpx;
  box-sizing: border-box;
  overflow-y: auto;
}

.hide {
  display: none;
}

.checkbox-list {
  margin: 0 auto;
  width: 690rpx;
  height: 430rpx;
  overflow-y: auto;
  /* min-height: 430rpx; */
  padding: 0 36rpx;
  background: linear-gradient(0deg, #E5E6FF 0%, #FFFFFF 100%);
  border-radius: 12rpx;
  box-sizing: border-box;
}

.textarea-wrapper {
  margin: 0 auto;
  width: 690rpx;
  height: 410rpx;
  overflow-y: auto;
  background: #FFFFFF;
  border-radius: 12rpx;
  padding-bottom: 60rpx;
}
/*  */
.question-tips {
  display: flex;
  padding:40rpx 50rpx 80rpx;
  font-size: 36rpx;
  line-height: 1.2;
  color: #FFBE53;
}

.riskHide{
  display: none;
}
/*  */
.fitness-tips {
  margin-top: 50rpx;
  padding: 0 40rpx;
  color: #FFFFFF;
  font-size: 28rpx;
  line-height: 1.8;
}

.text1>text {
  display: block;
}

.text2-title {
  margin-top: 40rpx;
  margin-bottom: 16rpx;
}

/* 签字 */
.signature-box {
  margin-top: 160rpx;
  padding-bottom: 100rpx;
}

.signature-box .signature-title {
  padding: 0 70rpx 0 40rpx;
  font-size: 32rpx;
  color: #FFFFFF;
  line-height: 1.5;
}

.signature-box .submit {
  margin: 0 auto;
  margin-top: 112rpx;
  width: 620rpx;
  height: 86rpx;
  line-height: 86rpx;
  text-align: center;
  background: #FF9E00;
  border-radius: 12rpx;
  font-size: 32rpx;
  color: #FFFFFF;
}

/* 签字版 */
.paper {
  position: relative;
  margin: 0 auto;
  margin-top: 48rpx;
  width: 668rpx;
  height: 468rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
}

.paper .handWriting {
  width: 100%;
  height: 100%;
}

.paper .refresh {
  display: flex;
  align-items: center;
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  z-index: 99;
}

.refresh cover-image {
  width: 36rpx;
  height: 36rpx;
}

.refresh .resetWrite {
  margin-left: 18rpx;
  font-size: 30rpx;
  color: #000000;
}
/* */
.question-mask {
  width: 690rpx;
  height: 534rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  box-sizing: border-box;
}

.question-mask .question-mask-title {
  padding: 40rpx 0;
  text-align: center;
  font-size: 30rpx;
  font-weight: bold;
}

.textarea-list {
  padding: 30rpx;
  width: 90%;
  margin: 0 auto;
  height: 200rpx;
  box-sizing: border-box;
  color: #999999;
}

.textarea-list .textarea2 {
  width: 100%;
  height: 100%;
  padding: 0 28rpx;
  box-sizing: border-box;
  color: #333333;
}

.textarea-list .limitFont {
  text-align: right;
  color: #999999;
}

.marks-btn {
  margin-top: 60rpx;
  display: flex;
  justify-content: space-around;
}

.marks-btn button {
  width: 220rpx;
  height: 66rpx;
  line-height: 66rpx;
  text-align: center;
  border-radius: 33px;
}

.marks-btn .cancel {
  border-color: #B3B3B3 !important;
  font-size: 28rpx;
  color: #B3B3B3;
  outline: none;
}

.marks-btn .save {
  background: #2564F6;
  font-size: 28rpx;
  color: #FFFFFF;
}