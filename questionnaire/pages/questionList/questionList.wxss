.questionList-head {
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: space-between;
  width: 100%;
  height: 340rpx;
  padding: 36rpx 0;
  box-sizing: border-box;
  background-color: #4178F9;
}

.member {
  text-align: center;
}

.member image {
  width: 120rpx;
  height: 120rpx;
  vertical-align: middle;
}

.member .member-name {
  margin-top: 16rpx;
  font-size: 36rpx;
  color: #FFFFFF;
}

.questionList-head .addquestionBtn {
  height: 60rpx;
  width: 186rpx;
  line-height: 60rpx;
  text-align: center;
  background: #FFFFFF;
  border-radius: 12rpx;
  color: #2664F6;
  font-size: 26rpx;
}

/* 问卷 */
.scroll-content {
  padding: 24rpx 30rpx 0;
}
.scroll-content .scroll-list{
  position: relative;
  width: 690rpx;
  height: 180rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 20rpx 0px rgba(0, 34, 112, 0.08);
  border-radius: 10rpx;
  margin: 0 auto;
  box-sizing: border-box;
  margin-bottom: 24rpx;
}
.scroll-content .scroll-item {
  position: relative;
  width: 100%;
  height: 180rpx;
  display: flex;
  align-items: center;
  z-index: 10;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.scroll-content .scroll-item>image {
  width: 70rpx;
  height: 70rpx;
  flex-shrink: 0;
  margin-left: 10rpx;
}

.scroll-content .scroll-list .question-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 180rpx;
}

.scroll-item .right-box {
  margin-left: 30rpx;
  flex: 1;
}

.scroll-item .right-box .top {
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
  color: #333333;
}

.right-box .top image {
  width: 36rpx;
  height: 36rpx;
}

.right-box .bottom {
  margin-top: 15rpx;
  font-size: 26rpx;
  color: #333333;
}

.right-box .bottom text {
  margin-left: 20rpx;
}