/* questionnaire/pages/systemQuestion/systemQuestion.wxss */
.van-tabs__line {
  background-color: #2564F6 !important;
}

.van-hairline--top-bottom {
  border-bottom: 1px solid #E6EAF1 !important;
}

.van-tab__pane {
  padding: 0 30rpx !important;
}

.basequestion {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 100%;
  min-height: 134rpx;
  box-sizing: border-box;
  padding: 30rpx;
  border-bottom: 1px solid #E6EAF1;
  line-height: 1.8;
}

.basequestion .question-item {
  font-size: 28px;
  line-height: 1.3;
  font-size: 28rpx;
  color: #333333;
}

.qustion-answer {
  display: flex;
  flex-wrap: wrap;
}

.qustion-answer>text {
  margin: 0 20rpx;
  font-size: 28rpx;
  color: #999999;
}

/*  */
.assessment-content {
  margin-top: 72rpx;
  padding: 0 42rpx;
}

.text-character {
  line-height: 1.8;
  font-size: 28rpx;
  color: #333333;
}

.text-character>text {
  display: block;
}

.active-assess {
  margin-top: 62rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  color: #333333;
  line-height: 1.8;
}

.active-assess .as-title {
  margin-bottom: 36rpx;
  color: #000000;
}

.active-assess .as_cont>text {
  display: block;
}

.sign-handle {
  margin-top: 162rpx;
  font-size: 32rpx;
  color: #333333;
  padding-bottom: 30rpx;
}

.sign-handle>image {
  width: 100%;
  height: 468rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
}

.sign-handle .success {
  margin-top: 30rpx;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background: #2564F6;
  border-radius: 8rpx;
  font-size: 30rpx;
  color: #FFFFFF;
}